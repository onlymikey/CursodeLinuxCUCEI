root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation

# 4 space indentation
[*.{htm,html}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.md]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab

# Tab indentation
[*.{bash,c,zsh}]
indent_style = tab

# Windows files
[*.{bat,cmd,ps,ps1}]
indent_style = tab
# Windows-Style newlines
end_of_line = crlf
